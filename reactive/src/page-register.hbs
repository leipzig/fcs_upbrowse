{{#extend "layout-empty" current='page-404'}}
{{! append html code into the content block declared in the layout partial }}
    {{#content "content" mode="append"}}
        <section class="p-3 pt-sm-6 pl-sm-7 pb-6">
            <a href="/" onclick="history.back()" class="fs-5">
                <i class="icon-arrow-left-circle align-middle icon-mr fs-3"></i>Go to previous page</a>
        </section>
        <section class="central-block">
            <div class="empty-page-content d-inline-block col-xl-4 col-lg-6 col-md-8 col-sm-10">
                <h1 class="fw-semibold c-info text-uppercase">reactive</h1>
                <h5 class="mt-1">Responsive Admin Template</h5>
                <div class="transition fade right in">
                    <div class="px-4 pt-3 bgc-white-darker mt-5 text-left">
                        <h6>Login into your account</h6>
                        <div class="form-group pt-3">
                            <label class="sr-only" for="register-email">Enter Registration Email</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="text" class="form-control form-control-lg" id="register-email" placeholder="Email Address">
                                <i class="input-icon icon-user"></i>
                            </div>
                        </div>
                        <div class="form-group pt-3">
                            <label class="sr-only" for="register-username">Enter Registration username</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="text" class="form-control form-control-lg" id="register-username" placeholder="Username">
                                <i class="input-icon icon-user"></i>
                            </div>
                        </div>
                        <div class="form-group pt-3">
                            <label class="sr-only" for="register-password">Enter Registration password</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="password" class="form-control form-control-lg" id="register-password" placeholder="Password">
                                <i class="input-icon icon-lock"></i>
                            </div>
                        </div>
                        <div class="form-group pt-3">
                            <label class="sr-only" for="register-password-repeat">Repeat Registration password</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="password" class="form-control form-control-lg" id="register-password-repeat" placeholder="Repeat">
                                <i class="input-icon icon-lock"></i>
                            </div>
                        </div>
                        <div class="pt-3">
                            <a href="" class="btn btn-primary btn-lg w-100">Sign In</a>
                        </div>
                        <div class="pt-5">
                            <h6 class="text-center">Or Log In Using</h6>
                            <ul class="login-icons list-inline list-unstyled pt-3 pb-3">
                                <li class="list-inline-item">
                                    <a href="" class="btn-icon bgc-facebook"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="" class="btn-icon bgc-linkedin"><i class="fa fa-linkedin"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="" class="btn-icon bgc-github"><i class="fa fa-github"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="" class="btn-icon bgc-twitter"><i class="fa fa-twitter"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="pt-2 clearfix">
                        <div class="pull-left"><span class="mr-1">Already Have an Account?</span> <a href="page-login.html">Sign In</a></div>
                        <div class="pull-right"><a href="page-recover.html">Forgot Password?</a></div>
                    </div>
