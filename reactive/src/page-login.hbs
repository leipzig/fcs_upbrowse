{{#extend "layout-empty" current='page-404'}}
{{! append html code into the content block declared in the layout partial }}
    {{#content "content" mode="append"}}
        <section class="p-3 pt-sm-6 pl-sm-7 pb-6">
            <a href="/" onclick="history.back()" class="fs-5">
                <i class="icon-arrow-left-circle align-middle icon-mr fs-3"></i>Go to previous page</a>
        </section>
        <section class="central-block">
            <div class="empty-page-content d-inline-block col-xl-4 col-lg-6 col-md-8 col-sm-10">
                <h1 class="fw-semibold c-info text-uppercase">reactive</h1>
                <h5 class="mt-1">Responsive Admin Template</h5>
                <div class="transition fade right in">
                    <div class="px-4 pt-3 bgc-white-darker mt-5 text-left">
                        <h6>Login into your account</h6>
                        <div class="form-group pt-3">
                            <label class="sr-only" for="login-username">Enter username</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="text" class="form-control form-control-lg" id="login-username" placeholder="Username">
                                <i class="input-icon icon-user"></i>
                            </div>
                        </div>
                        <div class="form-group pt-2">
                            <label class="sr-only" for="login-password">Enter password</label>
                            <div class="input-group input-left-icon mb-2 mr-2 mb-0">
                                <input type="password" class="form-control form-control-lg" id="login-password" placeholder="Password">
                                <i class="input-icon icon-lock"></i>
                            </div>
                        </div>
                        <div class="form-check mt-3">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input">
                                <span class="custom-control-indicator"></span>
                                <span class="custom-control-description ml-2 c-info">Remember Me</span>
                            </label>
                        </div>
                        <div class="pt-1 pb-4">
                            <a href="" class="btn btn-primary btn-lg w-100">Sign In</a>
                        </div>
                    </div>
                    <div class="pt-2 clearfix">
                        <div class="pull-left"><a href="page-register.html">Create an Account</a></div>
                        <div class="pull-right"><a href="page-recover.html">Forgot Password?</a></div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <ul class="list-unstyled list-inline pb-3 pt-6">
                <li class="list-inline-item px-3"><a href="" class="c-gray">العربية</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">中文</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">English</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Français</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Русский</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Español</a></li>
            </ul>
            <ul class="list-unstyled list-inline pb-3 fs-7">
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Contact Us</a></li>
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Privacy Policy</a></li>
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Terms of Use</a></li>
                <li class="list-inline-item px-3 pt-1"><span class="c-gray">
                    <i class="fa fa-copyright icon-mr-ch"></i>REACTIVE <span class="pl-2">2017</span></span>
                </li>
            </ul>
        </footer>
    {{/content}}
{{/extend}}
