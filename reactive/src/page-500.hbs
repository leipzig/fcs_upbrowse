{{#extend "layout-empty" current='page-500'}}
{{! append html code into the content block declared in the layout partial }}
    {{#content "content" mode="append"}}
        <section class="p-3 pt-sm-6 pl-sm-7 pb-6">
            <a href="/" onclick="history.back()" class="fs-5">
                <i class="icon-arrow-left-circle align-middle icon-mr fs-3"></i>Go to previous page</a>
        </section>
        <section class="central-block c-gray">
            <div class="empty-page-content d-inline-block col-xl-4 col-lg-6 col-md-8 col-sm-10">
                <h2 class="fw-light">500 - internal server error</h2>
                <div class="px-4 pt-3 bgc-white-darker mt-6 text-left">
                    <h5><span class="fs-3 fw-light lh-6">SORRY</span>, something has gone wrong.</h5>
                    <h6>Try searching or go to <a href="/">Homepage</a></h6>
                    <div class="form-group py-2 mt-2">
                        <label class="sr-only" for="error-search">Search on 404 page</label>
                        <div class="input-group input-right-icon mb-2 mr-2 mb-0">
                            <input type="text" class="form-control form-control-lg" id="error-search" placeholder="Search">
                            <i class="input-icon fa fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <ul class="list-unstyled list-inline pb-3 pt-6">
                <li class="list-inline-item px-3"><a href="" class="c-gray">العربية</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">中文</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">English</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Français</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Русский</a></li>
                <li class="list-inline-item px-3"><a href="" class="c-gray">Español</a></li>
            </ul>
            <ul class="list-unstyled list-inline pb-3 fs-7">
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Contact Us</a></li>
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Privacy Policy</a></li>
                <li class="list-inline-item px-3 pt-1"><a href="" class="c-gray">Terms of Use</a></li>
                <li class="list-inline-item px-3 pt-1"><span class="c-gray">
                    <i class="fa fa-copyright icon-mr-ch"></i>REACTIVE <span class="pl-2">2017</span></span>
                </li>
            </ul>
        </footer>
    {{/content}}
{{/extend}}
